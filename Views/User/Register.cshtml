@model UserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register";
}

<form asp-controller="User" asp-action="Register" method="post" autocomplete="off">
    <div class="form-group">
        <label for="username">Username</label>
        <input asp-for="Username" type="text" id="username" class="form-control" autofocus />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input asp-for="Password" type="password" id="password" class="form-control" />
    </div>
    <div class="form-group">
        <label for="confirm">Confirm Password</label>
        <input asp-for="Confirm" type="password" id="confirm" class="form-control" />
        <span id="warning" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input id="submit" type="submit" class="btn btn-primary" value="Register" disabled />
    </div>
</form>
