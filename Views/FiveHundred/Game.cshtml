@model FiveHundredViewModel
@{
    ViewData["Title"] = "500";
}

@section Scripts
{
    <script>
        // Set first team as bidder
        ChangeBidder(0);

        // On bidder change
        $('form input[type=radio][name=bidder]').change(function () {
            ChangeBidder($(this).val());
        });

        // On suit change
        for (let i = 0; i < @Model.Teams.Length; i++) {
            $(`#suit${i}`).change(function () {
                // If Misere is selected (value is 5 or 6) hide tricks
                $(`#biddingTricks${i}`).attr('hidden', $(this).val() == 5 || $(this).val() == 6);
            });
        }

        // On selection change
        $('form select').change(CheckValid);

        // Change bidder
        function ChangeBidder(id) {
            // Set all hands to defending
            $('.biddingTricks, .suit').hide();
            $('.defendingTricks').show();

            // Change bidder
            $(`#biddingTricks${id}, #suit${id}`).show();
            $(`#defendingTricks${id}`).hide();

            CheckValid();
        }

        // Check to see if hands given are valid
        function CheckValid() {
            var enabled = true;

            // Check to see if each input has a value
            $('form select:visible').each(function () {
                if ($(this).val() == "") {
                    enabled = false;
                }
            });

            // Check to see if hands are possible (tricks don't add up to >10)
            // TODO: Fix
            var sum = 0;
            $('form select.defendingTricks:visible').each(function () {
                sum += +$(this).val();
            });
            if (sum > 10) {
                enabled = false;
            }

            // If all requirements are met, enable submit button
            $('#submit').prop('disabled', !enabled); 
        }
    </script>
}

